# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

OPTIONS        /api/startDate/:startDate               @controllers.CorsApiController.startDate(startDate: String)
OPTIONS        /api/latlon/:latitude/:longitude        @controllers.CorsApiController.latLon(latitude: Double, longitude: Double)
GET            /api/latlon/:latitude/:longitude        @controllers.API.geo(latitude: Double, longitude: Double)
GET            /api/startDate/:startDate               @controllers.API.byStartDate(startDate: String, start: Long ?= 0, size:Long ?= 50)

# Home page
GET            /                                       controllers.Application.index()

GET            /admin/loadFile                         @controllers.Ingestion.loadFile
POST           /admin/loadFile                         @controllers.Ingestion.doLoadFile

# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)
